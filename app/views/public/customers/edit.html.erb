<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h4 class="p-3 mb-2 bg-transparent text-dark">会員情報編集</h4>
    </div>
  </div>
  <%= form_with model: @customer do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="d-flex flex-column mb-3">
      
        <div class="form-group form-inline">
          <div class="col-md-3">名前</div>
          <div class="col-md-3"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
          <div class="col-md-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
        </div>
      
        <div class="form-group form-inline">
          <div class="col-md-3">フリガナ</div>
          <div class="col-md-3"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></div>
          <div class="col-md-3"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3">郵便番号</div>
          <div class="col-sd-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3">住所</div>
          <div class="col-md-3"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
        </div>
        
        <div class="form-group form-inline">
          <div class="col-md-3">電話番号（ハイフンなし）</div>
          <div class="col-md-3"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
        </div>
        
        <div class="form-group form-inline">
          <div class="col-md-3">メールアドレス</div>
          <div class="col-md-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3"></div>
          <div class="col-md-3"><%= f.submit "編集内容を保存", class: "btn btn-primary" %></div>
        </div>
      <% end %>

    </div>
  </div>
  <%= render "public/shared/links" %>
</div>