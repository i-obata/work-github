<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h4 class="p-3 mb-2 bg-transparent text-dark">新規会員登録</h4>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      
      <div class="form-group form-inline">
        <div class="col-md-2">名前</div>
        <div class="col-md-2 text-right">(姓)　</div>
        <div class="col-md-2"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
        <div class="col-md-2 text-right">(名)　</div>
        <div class="col-md-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
      </div>
    
      <div class="form-group form-inline">
        <div class="col-md-2">フリガナ</div>
        <div class="col-md-2 text-right">(セイ)</div>
        <div class="col-md-2"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></div>
        <div class="col-md-2 text-right">(メイ)</div>
        <div class="col-md-3"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
      </div>

      <div class="form-group form-inline">
        <div class="col-md-4">メールアドレス</div>
        <div class="col-md-7"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
    
      <div class="form-group form-inline">
        <div class="col-md-4">郵便番号（ハイフンなし）</div>
        <div class="col-md-7"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
      </div>
    
      <div class="form-group form-inline">
        <div class="col-md-4">住所</div>
        <div class="col-md-7"><%= f.text_field :address, :size=>"62", autofocus: true, autocomplete: "address" %></div>
      </div>
    
      <div class="form-group form-inline">
        <div class="col-md-4">電話番号（ハイフンなし）</div>
        <div class="col-md-7"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
      </div>

      <div class="form-group form-inline">
        <div class="col-md-4">パスワード
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
        <div class="col-md-7"><%= f.password_field :password, autocomplete: "new-password" %></div>
      </div>

      <div class="form-group form-inline">
        <div class="col-md-4">パスワード（確認用）</div>
        <div class="col-md-7"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>

      <div class="form-group form-inline">
        <div class="col-md-4"></div>
        <div class="col-md-7"><%= f.submit "新規登録", class: "btn btn-primary" %></div>
      </div>
    <% end %>
  </div>
  <%= render "public/shared/links" %>
</div>