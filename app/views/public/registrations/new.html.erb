<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2 class="p-3 mb-2 bg-transparent text-dark">新規会員登録</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_session_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="d-flex flex-column mb-3">
      
        <div class="form-group form-inline">
          <div class="col-md-3">名前</div>
          <div class="text-left">(姓)　</div>
          <div class="col-md-3"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
          <div class="text-left">(名)　</div>
          <div class="col-md-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
        </div>
      
        <div class="form-group form-inline">
          <div class="col-md-3">フリガナ</div>
          <div class="text-left">(セイ)</div>
          <div class="col-md-3"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></div>
          <div class="text-left">(メイ)</div>
          <div class="col-md-3"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3">メールアドレス</div>
          <div class="col-md-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
      
        <div class="form-group form-inline">
          <div class="col-md-3">郵便番号（ハイフンなし）</div>
          <div class="col-sd-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
        </div>
      
        <div class="form-group form-inline">
          <div class="col-md-3">住所</div>
          <div class="col-md-3"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
        </div>
      
        <div class="form-group form-inline">
          <div class="col-md-3">電話番号（ハイフンなし）</div>
          <div class="col-md-3"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3">パスワード
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="col-md-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3">パスワード（確認用）</div>
          <div class="col-md-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        </div>

        <div class="form-group form-inline">
          <div class="col-md-3"></div>
          <div class="col-md-3"><%= f.submit "新規登録", class: "btn btn-primary"  %></div>
        </div>
      <% end %>
    </div>
  </div
  <%= render "public/shared/links" %>
</div>