<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <h4 class="p-3 mb-2 bg-transparent text-dark">注文情報確認</h4>
        </div>
    </div>
    <%= form_with model: @order do |f| %>
        <div class="row">
            <div class="col">
                <!--カート内商品一覧-->
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col"><strong>商品名</strong></th>
                            <th scope="col"><strong>単価(税込)</strong></th>
                            <th scope="col"><strong>数量</strong></th>
                            <th scope="col"><strong>小計</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @cart_item.each do |cart_item| %>
                            <tr>
                                <td><%= image_tag cart_item.item.get_image %><%= cart_item.item.name %></td>
                                <td><%= cart_item.item.with_tax_price %></td>
                                <td><%= cart_item.amount %></td>
                                <td><%= cart_item.subtotal %></td>
                                <% @totalprice += cart_item.subtotal %>
                            <tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col">
                
                <!--請求金額一覧-->
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>送料</td>
                            <td>800</td>
                        </tr>
                        <tr>
                            <td>商品合計</td>
                            <td><%= @totalprice %></td>
                        </tr>
                        <tr>
                            <td>請求金額</td>
                            <td><%= @totalprice + 800 %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-1">
                <div class="form-group form-inline">
                    <p5><strong>支払方法</strong></p5>
                    <div><%= f.payment_method %></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-1">
                <div class="form-group form-inline">
                    <p5><strong>お届け先</strong></p5>
                    <div>〒<%= f.postal_code + " " + f.address %><br><%= f.destination %></div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around mb-3">
            <div class="col-sm">
                <div class="actions">
                    <%= f.submit "注文を確定する", class: "btn btn-success" %>
                </div>
            </div>
        </div>
    <% end %>
</div>