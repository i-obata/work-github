<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2 class="p-3 mb-2 bg-transparent text-dark">ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h6 class="p-3 mb-2 bg-transparent text-dark">会員の方はこちらからログイン</h6>
    </div>
  </div>
  <div class="d-flex flex-column bd-highlight mb-3">
    <div class="mx-auto col-md-8">
      <%= form_with model: @customer, url: admin_session_path, local: true do |f| %>
        
        <div class="form-group form-inline">
          <%= f.label :メールアドレス, class: "col-sm-3" %>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control edit-form" %>
          </div>
        </div>

        <div class="form-group form-inline">
          <%= f.label :パスワード, class: "col-sm-3" %>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control edit-form" %>
          </div>
        </div>
        
        <div class="form-group form-inline">
          <div class="col-sm-3"></div>
          <div class="col-sm-9">
            <%= f.submit "ログイン", class: "btn btn-primary"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>