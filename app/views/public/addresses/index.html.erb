<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <h4 class="p-3 mb-2 bg-transparent text-dark">配送先登録/一覧</h4>
        </div>
    </div>
    <div class="row">
        <%= form_with model: @address do |f| %>
            <div class="d-flex flex-column mb-3">

                <div class="form-group form-inline">
                    <div class="col-md-5">郵便番号（ハイフンなし）</div>
                    <div class="col-md-4"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
                </div>
                
                <div class="form-group form-inline">
                    <div class="col-md-5">住所</div>
                    <div class="col-md-4"><%= f.text_field :address, size: 60, autofocus: true, autocomplete: "address" %></div>
                </div>
                
                <div class="form-group form-inline">
                    <div class="col-md-5">宛先</div>
                    <div class="col-md-4"><%= f.text_field :destination, autofocus: true, autocomplete: "destination" %></div>
                    <div class="col text-right"><%= f.submit "新規登録", class: "btn btn-success" %></div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col"><strong>郵便番号</strong></th>
                        <th scope="col"><strong>住所</strong></th>
                        <th scope="col"><strong>宛先</strong></th>
                        <th scope="col" colspan = "1"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @addresses.each do |address| %>
                        <tr>
                            <td><%= address.postal_code %></td>
                            <td><%= address.address %></td>
                            <td><%= address.destination %></td>
                            <td>
                                <button type="button" class="btn btn-success">
                                    <%= link_to "編集する", edit_address_path(address.id), class: "text-light text-decoration-none" %>
                                </button>
                                <button type="button" class="btn btn-danger">
                                    <%= link_to "削除する","/addresses/#{address.id}",class: "text-light text-decoration-none", method: :delete, "data-confirm" => "Do you really want to delete it?" %>
                                </button>
                            </td>
                        <tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>