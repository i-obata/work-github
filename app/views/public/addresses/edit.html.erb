<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <h4 class="p-3 mb-2 bg-transparent text-dark">配送先編集</h4>
        </div>
    </div>
    <%= form_with model: @address do |f| %>
        <div class="row mb-3">
            <div class="col-md-3">郵便番号（ハイフンなし）</div>
            <div class="col-md-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">住所</div>
            <div class="col-md-3"><%= f.text_field :address, :size=>"62", autofocus: true, autocomplete: "address" %></div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">宛先</div>
            <div class="col-md-3"><%= f.text_field :destination, autofocus: true, autocomplete: "destination" %></div>
            <div class="col text-right"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
        </div>
    <% end %>
</div>