<div class="container">
    <div class="row">
        <div class="col">
            <%= image_tag @item.get_image %>
        </div>
        <div class="d-flex flex-column mb-3">
            <%= form_with model: @item do |f| %>
            
                <div class="col"><%= f.name %></div>
                <div class="col-md-3"><%= f.introduction %></div>

                <div class="col-md-3">￥
                    <%= f.price + f.price * 0.1 %>
                    (税込)
                </div>

            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-center">
            <!--個数選択のドロップダウンリスト選択-->
            <button type="button" class="btn btn-success ml-5">
                <%= link_to "カートに入れる", edit__item_path, class: "text-light text-decoration-none" %>
            </button>
        </div>
    </div>
</div>