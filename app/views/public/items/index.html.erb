<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <h4 class="p-3 mb-2 bg-transparent text-dark">商品一覧</h4>
        </div>
    </div>
    <div class="row">
        <div class='col-md-8 d-flex flex-wrap justify-content-center'>
            <% @items.each do |item| %>
                <%= link_to item_path(item.id) do %>
                    <div class="d-flex flex-column bd-highlight mb-3">
                        <%= image_tag item.get_profile_image(150,150) %>
                        <%= item.name %></br>
                        ￥<%= item.price %>
                    </div>
                <% end %>
            <% end %>
            <%= paginate @items %>
        </div>
    </div>
</div>
