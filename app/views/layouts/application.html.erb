<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/fb873a8e10.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-2" href= "/">LOGO</a>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <!--管理者ログイン時のヘッダーの表示-->
                <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admin_customers_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admin_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link active", method: :delete %>
                </li>
              <% elsif customer_signed_in? %>
                <!--ユーザーログイン時のヘッダーの表示-->
                <li class="nav-item">
                  <%= link_to "マイページ", customers_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", cart_items_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link active", method: :delete %>
                </li>
              <% else %>
                <!--サインアウト時のヘッダーの表示-->
                <li class="nav-item">
                  <%= link_to "about", about_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path, class: "nav-link active", method: :get %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, class: "nav-link active", method: :get %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>      
    </main>
    <footer></footer>
  </body>
</html>
