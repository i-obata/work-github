<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <h4 class="p-3 mb-2 bg-transparent text-dark">商品新規登録</h4>
        </div>
    </div>
    <%= form_with model: @item, url: admin_items_path, id: 'new_customer', class: 'new_customer'  do |f| %>
        <!--<div class="d-flex flex-column mb-3">-->
        
            <div class="form-group form-inline">
                <div class="col-md-3">商品画像</div>
                <div class="col-md-6"><%= f.file_field :profile_image, accept: "image/*", class: "w-100" %></div>
            </div>
            
            <div class="form-group form-inline">
                <div class="col-md-3">商品名</div>
                <div class="col-md-6"><%= f.text_field :name, :size=>"40",class:"form-control", placeholder:"商品名" %></div>
            </div>
            
            <div class="form-group form-inline">
                <div class="col-md-3">商品説明</div>
                <div class="col-md-6"><%= f.text_area :introduction, :size=>"40x7", class: "form-control", placeholder:"ここに説明文を記述します" %></div>
            </div>
            
            <div class="form-group form-inline">
                <div class="col-md-3">税抜価格</div>
                <div class="col-md-6"><%= f.text_field :price, :size=>"40", class: "form-control", placeholder:"1000" %>円</div>
            </div>
            
            <div class ="col text-center">
                <%= f.submit '新規登録', class:"btn btn-success" %>
            </div>
        <!--</div>-->
  <% end %>
</div>
