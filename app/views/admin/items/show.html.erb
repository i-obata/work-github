<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <h4 class="p-3 mb-2 bg-transparent text-dark">商品詳細</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 text-center">
            <%= image_tag @item.get_profile_image(300,300) %>
        </div>
        <div class="col d-flex flex-column mb-3">
            <div class="form-group form-inline">
                <div class="col-md-3">商品名</div>
                <div class="col-md-6"><%= @item.name %></div>
            </div>
            
            <div class="form-group form-inline">
                <div class="col-md-3">商品説明</div>
                <div class="col-md-6"><%= @item.introduction %></div>
            </div>
            
            <div class="form-group form-inline">
                <div class="col-md-3">税込価格</br>(税抜価格)</div>
                <div class="col-md-6"><%= @item.with_tax_price %>（<%= @item.price %>）円</div>
            </div>
            
            <div class="text-center">
                <button type="button" class="btn btn-success w-25">
                    <%= link_to "編集する", edit_admin_item_path, class: "text-light text-decoration-none" %>
            </button>
            </div>
        </div>
    </div>
</div>